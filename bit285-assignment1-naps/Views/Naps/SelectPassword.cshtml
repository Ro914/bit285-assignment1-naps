@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model bit285_assignment1_naps.Models.User
@inject bit285_assignment1_naps.Models.PasswordSuggestionService Generate
@{
    Layout = "_Layout";
    ViewBag.Title = "Password Info";
}
<h1>Choose a Password</h1>
<fieldset>
    <form asp-action="SelectPassword" method= "post">
        <div>
            <label asp-for="Password">Possible Passwords</label>
            <input asp-for="Password" value=@Generate.generatePassword(Model)/>
        </div>
        <div>
            <input type ="submit" value="Create Account" />
        </div>
    </form>
    <form asp-action="SelectPassword" method="get"><div><input type="submit" value="Generate new password" /></div></form>
    
</fieldset>