@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model bit285_assignment1_naps.Models.User
@{
    Layout = "_Layout";
    ViewBag.Title = "Password Info";
}

<h1>Password Information</h1>
<fieldset>
    <form asp-action="PasswordInfo" method="post">
        <div>
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" value=@Model.LastName/>
            <br />
            <span asp-validation-for="LastName" class="Validation"></span>
        </div>
        <div>
            <label asp-for="BirthYear">Birth year</label>
            <input asp-for="BirthYear" />
            <br />
            <span asp-validation-for="BirthYear" class="Validation"></span>
        </div>
        <div>
            <label asp-for="FavoriteColor">Favorite Color</label>
            <input asp-for="FavoriteColor" />
            <br />
            <span asp-validation-for="FavoriteColor" class="Validation"></span>
        </div>

        <div>
            <input type="submit" value="Suggest Password" />
            <input type="reset" value="Reset" />
        </div>
    </form>
</fieldset>